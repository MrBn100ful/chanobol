<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/move</item>
        <item name="android:windowSharedElementReenterTransition">@transition/move</item>

        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">#8BC34A</item>
        <item name="colorControlHighlight">#608BC34A</item>

        <item name="bg">@color/bgLight</item>
        <item name="fg">#fafafa</item>
        <item name="fg2">#fff1f1f1</item>
        <item name="postview_image_bg">#fafafa</item>
        <item name="image_bg">?attr/colorPrimaryDark</item>
        <item name="drawer_bg">?attr/colorPrimary</item>
        <item name="drawer_entry">?android:textColorPrimaryInverse</item>
        <item name="drawer_header">?android:textColorPrimaryInverse</item>
        <item name="fav1">?android:textColorPrimaryInverse</item>
        <item name="fav2">?android:textColorSecondaryInverse</item>
        <item name="reply_icon_tint">#bbb</item>
        <item name="postview_divider">#ffe8e8e8</item>
        <item name="postview_action">?attr/colorPrimary</item>
        <item name="post_style">@style/PostView</item>
        <item name="toolbar_theme">@style/Toolbar</item>
        <item name="popup_theme">@style/Toolbar_Popup</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/move</item>
        <item name="android:windowSharedElementReenterTransition">@transition/move</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#80cbc4</item>
        <item name="colorControlHighlight">#6080cbc4</item>

        <item name="bg">@color/bgDark</item>
        <item name="fg">#000</item>
        <item name="fg2">#000</item>
        <item name="postview_image_bg">#000</item>
        <item name="image_bg">#000</item>
        <item name="drawer_bg">?attr/colorPrimaryDark</item>
        <item name="drawer_entry">?android:textColorPrimary</item>
        <item name="drawer_header">?android:textColorPrimary</item>
        <item name="fav1">?android:textColorPrimary</item>
        <item name="fav2">?android:textColorSecondary</item>
        <item name="reply_icon_tint">@color/transparent</item>
        <item name="postview_divider">#ff525252</item>
        <item name="postview_action">#90A4AE</item>
        <item name="post_style">@style/PostView.Dark</item>
        <item name="toolbar_theme">@style/Toolbar</item>
        <item name="popup_theme">@style/Toolbar_Popup</item>
    </style>

    <style name="AppTheme.Teal">
        <item name="colorPrimary">@color/colorPrimary_teal</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_teal</item>
    </style>

    <style name="AppTheme.Blue1">
        <item name="colorPrimary">@color/colorPrimary_blue1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_blue1</item>
    </style>

    <style name="AppTheme.Blue2">
        <item name="colorPrimary">@color/colorPrimary_blue2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_blue2</item>
    </style>

    <style name="AppTheme.Gray">
        <item name="colorPrimary">@color/colorPrimary_gray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_gray</item>
    </style>

    <!-- http://stackoverflow.com/a/28953241/283607 -->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">#fff</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="Toolbar_Popup" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">#fff</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="MediaActivity" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Widget.Chanobol.Drawer.Header" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">?drawer_header</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="Widget.Chanobol.Drawer.Entry" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">?drawer_entry</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.Chanobol.AdapterView" parent="">
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:background">?attr/bg</item>
        <item name="android:transitionGroup">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="Widget.Chanobol.AdapterView.BoardsGridView">
        <item name="android:columnWidth">@dimen/column_width</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Widget.Chanobol.AdapterView.GalleryGridView">
        <item name="android:columnWidth">@dimen/column_width_gallery</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Widget.Chanobol.AdapterView.PostsListView">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">10.0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Widget.Chanobol.AdapterView.PostsDialogListView">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/post_dialog_gap</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
    </style>

    <style name="PostView">
        <item name="grid_width">90dp</item>
        <item name="grid_height">300dp</item>
        <item name="grid_spacing">0dp</item>

        <item name="title_size">14sp</item>
        <item name="detail_size">10sp</item>
        <item name="icon_padding">6dp</item>
        <item name="icon_width">24dp</item>
        <item name="icon_height">14dp</item>
        <item name="options_spacing">25dp</item>
        <item name="options_left_padding">15dp</item>
        <item name="options_top_padding">5dp</item>
        <item name="options_right_padding">5dp</item>
        <item name="options_bottom_padding">15dp</item>
        <item name="last_seen_height">6dp</item>

        <item name="grid_padding">5dp</item>
        <item name="grid_image_size">120dp</item>
        <item name="grid_comment_padding">8dp</item>
        <item name="grid_replies_count_size">11sp</item>

        <item name="list_padding">10dp</item>
        <item name="list_image_size">70dp</item>
        <item name="list_comment_padding">11dp</item>
        <item name="list_replies_count_size">14sp</item>
        <item name="list_comment_max_height">200dp</item>

        <item name="thumbnail_background">#FFDDDDDD</item>
        <item name="saved_reply_color">#FFBCBCBC</item>
        <item name="highlighted_color">#FFD6BAD0</item>
        <item name="reply_count_color">#FF646464</item>
        <item name="name_color">#ff117743</item>
        <item name="subject_color">#ff0F0C5D</item>
        <item name="date_color">#ff646464</item>
        <item name="quote_color">#ffdd4641</item>
        <item name="highlight_quote_color">#ff950000</item>
        <item name="link_color">#ff6eb9b2</item>
        <item name="spoiler_color">#ff000000</item>
        <item name="capcode_color">#ffff0000</item>
        <item name="id_background_light">#ff636363</item>
        <item name="id_background_dark">#00000000</item>
        <item name="inline_quote_color">#ff7f9940</item>

        <item name="code_tag_size">12sp</item>
    </style>

    <style name="PostView.Dark">
        <item name="quote_color">#ffff7f72</item>
        <item name="highlight_quote_color">#ffff7f72</item>
        <item name="inline_quote_color">#ff52d74a</item>
        <item name="thumbnail_background">#00000000</item>
        <item name="saved_reply_color">#ff5C5C5C</item>
        <item name="highlighted_color">#ff444444</item>
        <item name="reply_count_color">#ff9f9f9f</item>
        <item name="subject_color">#ff625cff</item>
        <item name="date_color">#ff9f9f9f</item>
        <item name="link_color">#80cbc4</item>
        <item name="spoiler_color">#ff000000</item>
        <item name="id_background_light">#00000000</item>
        <item name="id_background_dark">#ffC6C6C6</item>
    </style>

</resources>
